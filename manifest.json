{
  "manifest_version": 2,
  "name": "OpenProject",
  "version": "2.8",
  "background": {
    "scripts": ["main.js"],
    "persistent": true
  },
  "permissions": ["https://*/*",
    "http://*/*",
    "tabs","management","debugger","activeTab","idle","storage","unlimitedStorage"],
  "minimum_chrome_version": "23",
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "js/jquery.js", "js/openproject.js", "inject.js" ],
      "css": ["styles/main.css" ]
    }
  ],
  "web_accessible_resources": [
    "js/*"
  ]
}
